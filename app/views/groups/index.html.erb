<div class="container">
  <h2>Groups</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Users count</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.id %></td>
          <td><%= group.name %></td>
          <td><%= group.description %></td>
          <td><%= group.users_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
